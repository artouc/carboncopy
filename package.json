{
    "name": "carboncopy-monorepo",
    "version": "0.1.0",
    "private": true,
    "description": "複雑な要素を含むHTMLを正確にPDFにレンダリングするためのクライアントサイドライブラリ",
    "workspaces": [
        "packages/*",
        "docs",
        "site",
        "playground"
    ],
    "scripts": {
        "build": "npm run build -w @osaxyz/carboncopy",
        "build:all": "npm run build --workspaces --if-present",
        "dev": "concurrently -n core,docs,site -c blue,green,magenta \"npm run dev -w @osaxyz/carboncopy\" \"npm run dev -w docs\" \"npm run dev -w site\"",
        "dev:core": "npm run dev -w @osaxyz/carboncopy",
        "dev:docs": "npm run dev -w docs",
        "dev:site": "npm run dev -w site",
        "dev:playground": "npm run dev -w playground",
        "playground": "npm run dev -w playground",
        "test": "npm run test -w @osaxyz/carboncopy",
        "test:all": "npm run test --workspaces --if-present"
    },
    "keywords": [
        "pdf",
        "html",
        "html-to-pdf",
        "converter"
    ],
    "author": "Arata Ouchi (Original SIN Architecture)",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}
